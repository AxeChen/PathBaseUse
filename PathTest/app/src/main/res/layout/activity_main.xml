<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testFillType"
        android:text="FILLTYPE属性效果展示" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testOpType"
        android:text="OPTYPE属性效果展示" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="oneLevelBezier"
        android:text="二阶赛贝尔曲线" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="waveProgressView"
        android:text="水波纹进度条" />

</LinearLayout>
